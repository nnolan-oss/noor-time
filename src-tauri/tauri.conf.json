{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "noor-time",
  "version": "0.1.0",
  "identifier": "com.nnolan.noor-time",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "noor-time",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "maxWidth": 800,
        "maxHeight": 600,
        "minHeight": 600,
        "visible": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
